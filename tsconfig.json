{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["mocha", "chai"],
    "paths": {
      "@/*": ["web/*"]
    }
  },
  "include": ["web/**/*.ts", "web/**/*.tsx", "web/**/*.vue"],
  "exclude": ["node_modules"]
}
